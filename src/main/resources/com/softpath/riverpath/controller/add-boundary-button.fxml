<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="addBoundaryPane" prefHeight="100.0" prefWidth="200.0"
          alignment="CENTER" stylesheets="@style.css">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Hyperlink text="+ Add new boundary" fx:id="addButton"
               GridPane.columnIndex="0" GridPane.halignment="CENTER"
               GridPane.valignment="CENTER"
               GridPane.hgrow="ALWAYS"
               maxWidth="Infinity"
               styleClass="button-like-hyperlink"/>
</GridPane>