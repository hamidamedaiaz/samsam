<?xml version="1.0" encoding="UTF-8"?>

<?import com.softpath.riverpath.custom.pane.BoundaryTitledPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BoundaryTitledPane xmlns:fx="http://javafx.com/fxml/1" fx:id="titledPane"
                    fx:controller="com.softpath.riverpath.controller.MeshingParametersController"
                    stylesheets="@style.css">
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="20.0" vgrow="SOMETIMES"/> <!-- Espace supplÃ©mentaire -->
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
        </rowConstraints>

        <Label text="NbElements" GridPane.rowIndex="0"/>
        <TextField fx:id="nbElements" promptText="Enter number of elements"
                   GridPane.columnIndex="1" GridPane.rowIndex="0" onKeyReleased="#handleKeyReleased"/>

        <Label text="hMin" GridPane.rowIndex="1"/>
        <TextField fx:id="hMin" promptText="Enter minimum mesh size"
                   GridPane.columnIndex="1" GridPane.rowIndex="1" onKeyReleased="#handleKeyReleased"/>

        <Label text="Lmax" GridPane.rowIndex="2"/>
        <TextField fx:id="lMax" promptText="Enter maximum length"
                   GridPane.columnIndex="1" GridPane.rowIndex="2" onKeyReleased="#handleKeyReleased"/>

        <Label text="Nscaling" GridPane.rowIndex="3"/>
        <TextField fx:id="nScaling" promptText="Enter scaling factor"
                   GridPane.columnIndex="1" GridPane.rowIndex="3" onKeyReleased="#handleKeyReleased"/>

        <Label text="ScaleNorme" GridPane.rowIndex="4"/>
        <TextField fx:id="scaleNorme" promptText="Enter norm scaling"
                   GridPane.columnIndex="1" GridPane.rowIndex="4" onKeyReleased="#handleKeyReleased"/>

        <Label text="Err1" GridPane.rowIndex="5"/>
        <TextField fx:id="err1" promptText="Enter error 1"
                   GridPane.columnIndex="1" GridPane.rowIndex="5" onKeyReleased="#handleKeyReleased"/>

        <Label text="Err2" GridPane.rowIndex="6"/>
        <TextField fx:id="err2" promptText="Enter error 2"
                   GridPane.columnIndex="1" GridPane.rowIndex="6" onKeyReleased="#handleKeyReleased"/>

        <Label text="Adaptateur" GridPane.rowIndex="7"/>
        <TextField fx:id="adaptateur" promptText="Enter adapter value"
                   GridPane.columnIndex="1" GridPane.rowIndex="7" onKeyReleased="#handleKeyReleased"/>

        <Label text="Lmin" GridPane.rowIndex="8"/>
        <TextField fx:id="lMin" promptText="Enter minimum length"
                   GridPane.columnIndex="1" GridPane.rowIndex="8" onKeyReleased="#handleKeyReleased"/>

        <!-- Button -->
        <GridPane GridPane.columnIndex="1" GridPane.rowIndex="10" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Button fx:id="validateButton" onAction="#handleValidate" text="Valid"
                    disable="true" styleClass="validation-button"/>
            <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel"
                    disable="true" styleClass="cancel-button" GridPane.columnIndex="1"/>
        </GridPane>

    </GridPane>
</BoundaryTitledPane>